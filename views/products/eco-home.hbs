<h1 class="ecohome"> Eco Home</h1>

<div class="product-display">
  {{#each ecoHome}}

    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="{{imageUrl}}" alt="">
      <div class="card-body">

        <h5 class="card-title"><a href="/products/{{_id}}">{{name}}</a></h5>
        <p class="card-text">{{description}}</p>
                
        <form action="/favourites/{{_id}}" method="POST">
          <button type="submit" class="btn btn-dark bluebutton">Favorite</button>
        </form>
        
      </div>
    </div>

  {{/each}}

</div>
