<h1 class="product-views-title">To Go</h1>

<div class="product-display">
  {{#each toGo}}

    <div class="card prod-view-cards" style="width: 18rem;">
      <img class="card-img-top img-all-prod-views" src="{{imageUrl}}" alt="Card image cap">
      <div class="card-body body-all-prod-views">

        <h5 class="card-title"><a href="/products/{{_id}}">{{name}}</a></h5>

            <form action="/favourites/{{_id}}" method="POST">
              <button type="submit" class="btn btn-dark bluebutton">Favorite</button>
            </form>

      </div>
    </div>

  {{/each}}

</div>


